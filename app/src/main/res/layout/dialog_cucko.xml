<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dialog_padding">

    <TextView
        android:id="@+id/text_cucko_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Nin Dep Trai"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/person_cucko_name"
        android:textStyle="bold"
        android:textColor="@android:color/tab_indicator_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="48dp"
        android:text="@string/cucko"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/holo_purple"
        android:textSize="@dimen/person_cucko_title"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btn_close"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_poke_style"
        android:text="@string/close"
        android:textColor="@android:color/white" />


</LinearLayout>